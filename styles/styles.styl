Green-500 = hsl(158, 36%, 37%)
Green-700 = hsl(158, 42%, 18%)
Black = hsl(212, 21%, 14%)
Grey = hsl(228, 12%, 48%)
Cream = hsl(30, 38%, 92%)
White = hsl(0, 0%, 100%)

*,
*::before,
*::after 
    box-sizing border-box
    margin 0
    padding 0

body
    font-size 14px
    background-color Cream
    display flex
    align-items center
    justify-content center

.super
    background-color White
    min-width 300px
    max-width 375px
    border-radius 10px
    margin auto 0.75rem

.super__image 
    width 100%
    border-radius 10px 10px 0 0

.super__content
    padding 2em

.super__category,
.super__description,
.super__price-old
    color Grey
    font-weight 500

.super__title
    padding 0.75em 0
    color Black
    font-weight 700

.super__description
    line-height 1.75

.super__price
    padding: 1.25em 0
    gap 15px
    justify-content flex-start

.super__price,
.super__button
    display flex
    align-items center

.super__price-new
        font-size 2rem
        color Green-500

.super__price-new,
.super__button
    font-weight 700

.super__price-old
    text-decoration line-through
    font-size 0.75rem

.super__button
    background Green-500
    padding 1em
    border-radius 7px
    gap 10px
    color White
    justify-content center
